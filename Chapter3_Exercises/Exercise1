// Esse programa lê um número e depois exibe seu antecessor e sucessor.

#include <stdlib.h>
#include <stdio.h>

int main(){
    
    int numero;
    
    printf("Insira um número!");
    scanf("%d", &numero);
    printf("O antecessor desse número é: %d", numero = numero - 1);
    ++numero; // O operador de pré-incremento é utilizado para fazer a váriavel numero voltar ao seu valor inicial, pois no comando anterior seu valor é subtraído em 1.
    printf("O sucessor desse número é: %d", numero = numero + 1);
    
    
    return 0; 
}
